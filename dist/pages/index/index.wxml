<!--pages/index/index.wxml-->
<view>
  <view class="main-container">
    <text class="main-text">status</text>
    <text class="main-text">{{status}}</text>
    <button type="primary" bindtap="switchStatus">switch</button>
    <text class="info-text">linalool time: {{ linalool }}</text>
    <text class="info-text">cinene time: {{ cinene }}</text>
    <view class="power-container">
      <text class="main-text">power</text>
      <view class="button-container">
        <icon type="{{ powerType }}"></icon>
        <text>{{ powerWord }}</text>
      </view>
    </view>
  </view>
</view>